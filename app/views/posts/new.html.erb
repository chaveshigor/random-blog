<%= form_with model: @new_post do |f| %>    
    <div class="field">
        <%= f.label :title %><br/>
        <%= f.text_field :title, autofocus: true %>
        <% @new_post.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div class="field">
        <%= f.label :description %><br/>
        <%= f.text_field :description, autofocus: true %>
        <% @new_post.errors.full_messages_for(:description).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div class="field">
        <%= f.label :body %><br/>
        <%= f.text_area :body, autofocus: true %>
        <% @new_post.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div class="actions">
        <%= f.submit "Postar" %>
    </div>
<% end %>